{% if page.projects %}
      <div class="projects-feed" style="margin-top: 2rem;">
        <h2><a href="{{ '/projects/' | relative_url }}" style="color: inherit">projects</a></h2>
        {% assign sorted_projects = site.projects | sort: "importance" %}
        {% for project in sorted_projects limit: 5 %}
          <div class="project-item" style="display: flex; align-items: flex-start; margin-bottom: 30px; border-bottom: 1px solid #eee; padding-bottom: 20px;">
            {% if project.img %}
              <div class="project-img" style="flex-shrink: 0; margin-right: 20px; width: 120px;">
                <img src="{{ project.img | relative_url }}" alt="{{ project.title }}" class="img-fluid rounded">
              </div>
            {% endif %}
            <div class="project-content">
              <h3 style="font-size: 1.4rem; margin-bottom: 5px;">
                <a href="{{ project.url | relative_url }}">{{ project.title }}</a>
              </h3>
              <p style="font-size: 0.95rem; color: #666; font-style: italic;">{{ project.description }}</p>
              <div style="font-size: 0.9rem;">
                {{ project.content | strip_html | truncatewords: 25 }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}